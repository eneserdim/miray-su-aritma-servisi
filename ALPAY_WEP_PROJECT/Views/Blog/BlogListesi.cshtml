@using PagedList
@using PagedList.Mvc
@using ALPAY_WEP_PROJECT.Models.Siniflar
@model IPagedList<Blog>
@{
    ViewBag.Title = "BlogListesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<div class="fridge_blog_area">
    <div class="banner-page pt-125 pb-125" style="background-image: url(../../Content/Themes/assets/photo/hizmetler.jpg)">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="banner-page-wrapper">
                        <div class="banner-page-text">
                            <h2>Blog</h2>
                        </div>
                        <ul class="banner-page-menu">
                            <li><a href="https://suaritmaservisistanbul.com">Anasayfa</a></li>
                            <li><span>Blog</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div> <br />
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="witr_section_title">
                    <div class="witr_section_title_inner text-center">
                        <h2>Miray Su Arıtma Servisi</h2>
                        <h3>Güncel Yazılarımız</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="witr_blog_area11 witr_blog_area16 blog_top">
            <div class="blog_wrap blog16_idblog1 slick-initialized slick-slider">
                <!-- fridge_blog_01  -->
                <div class="slick-list draggable">
                    <div class="slick-track" style="opacity: 1; width: 1170px; transform: translate3d(0px, 0px, 0px);">

                        <div class="witr_all_mb_30 col-lg-12 slick-slide slick-active" data-slick-index="1" aria-hidden="false" tabindex="0" style="width: 390px;">
                            <div class="busi_singleBlog">
                                <div class="witr_sb_thumb">
                                    @foreach (var item in Model)
                                    {
                        <a href="#" tabindex="0"> <img src="@Url.Content(item.BlogFotograf)" alt=""> </a>}
                                    <div class="witr_top_category">
                                        <ul class="post-categories">
                                            <li><a href="#" tabindex="0">Blog Köşesi</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="all_blog_color">
                                    <div class="witr_blog_con bs5">
                                        @foreach (var item in Model)
                                        {
                            <h2><a href="single-blog.html" tabindex="0">@item.BlogBaslik</a></h2>}

                                        <div class="em-blog-content-area_adn ">
                                            <div class="learn_more_adn">
                                                @foreach (var item in Model)
                                                {
                                    <a class="learn_btn adnbtn2" href="/Blog/BlogDetay/@item.BlogID" tabindex="0">Yazıyı Oku<i class="icofont-arrow-right"></i> </a>}

                                            </div>
                                        </div>
                                        <div class="witr_blog_border"></div>
                                        <span><a href="#" tabindex="0"><i class="icofont-user-alt-3"></i>Miray Su Arıtma</a></span>
                                        <span><i class="icofont-tags"></i> <a href="#" tabindex="0">Su Arıtma Serivisi</a></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- fridge_blog_02  -->
                <!-- fridge_blog_03  -->

                <div class="row">
                    <div class="col-md-12">
                        <div class="paginations">
                            <ul class="page-numbers">
                                <li><span aria-current="page" class="page-numbers current"> @Html.PagedListPager(Model, _sayfaNo => Url.Action("BlogListesi", "Blog", new { SayfaNo = _sayfaNo }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions { UpdateTargetId = "dvUrunListesi" }))</span></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>