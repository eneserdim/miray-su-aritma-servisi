@model ALPAY_WEP_PROJECT.Models.Siniflar.ServiceArea
@{
    ViewBag.Title = "bolgegetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("bolgeguncelle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Bölge Güncelleme Sayfası</h4>
                <br /><br />
                @Html.HiddenFor(x => x.ID)
                <div class="form-group">
                    <label for="exampleInputUsername1">Bölge Adı</label>
                    @Html.TextBoxFor(x => x.Tittle, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Açıklama</label>
                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control", id = "summernote" })
                </div>
                @Html.Label("Fotoğraf")
                <input type="file" name="file" id="file" />
                <br />
                <br />
                <button class="btn btn-primary">Güncelle</button>
                <a href="/Admin/bolgelistele" class="btn btn-danger">İptal</a>
            </div>
        </div>
    </div>}




