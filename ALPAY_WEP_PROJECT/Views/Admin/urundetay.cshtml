@using ALPAY_WEP_PROJECT.Models.Siniflar
@model List<Product>
@{
    ViewBag.Title = "urundetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-solid">
    <div class="card-body">
        <div class="row">
            <div class="col-12 col-sm-6">
                @*<h3 class="d-inline-block d-sm-none">LOWA Men’s Renegade GTX Mid Hiking Boots Review</h3>*@

                <div class="col-12">
                    @foreach (var fotograf in Model)
                    {
                        <img src="../../@Url.Content(fotograf.Images)" class="product-image" alt="..." />}
                </div>


            </div>
            @foreach (var uygulama in Model)
            {
                <div class="col-12 col-sm-6">
                    <h3 class="my-3">@uygulama.Tittle</h3>
                    <p>@Html.Raw(uygulama.Description)</p>

                    <hr>


                    <div class="mt-4">
                        <div class="btn btn-danger btn-lg btn-flat">
                            <i class="fa fa-ban fa-lg mr-2"></i>
                            <a href="/Admin/urunsil/@uygulama.ID" style="color:white">Sil</a>
                        </div>

                        <div class="btn btn-success btn-lg btn-flat">
                            <i class="fas fa-pen fa-lg mr-2"></i>
                            <a href="/Admin/urungetir/@uygulama.ID" style="color:white">Güncelle</a>
                        </div>
                    </div>

                </div>}

        </div>
    </div>
    <!-- /.card-body -->
</div>

