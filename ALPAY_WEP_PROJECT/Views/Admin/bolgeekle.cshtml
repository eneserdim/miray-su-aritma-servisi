@model ALPAY_WEP_PROJECT.Models.Siniflar.ServiceArea
@{
    ViewBag.Title = "bolgeekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("bolgeekle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <form class="form-group" method="post">
        @if (Model != null)
        {
            <input type="hidden" name="IsActive" value="true">}
        <div class="card card-info col-md-6">
            <div class="card-header">
                <h3 class="card-title">Yeni Bölge Ekleme Sayfası</h3>
            </div><br />
            <div class="form-group">
                <label>Başlık</label>
                <input type="text" class="form-control my-colorpicker1 colorpicker-element" data-colorpicker-id="1" data-original-title="" title="" name="Tittle" id="Tittle">
            </div>
            @Html.Label("Bölge Açıklaması")
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control", id = "summernote" })
            <div class="card-body col-md-6">
                <!-- Color Picker -->

                <input type="file" name="file" id="file" /> <br /><br />
            </div>

            <br />

            <button class="btn btn-primary">Ekle</button>
            <a href="/Admin/bolgelistele" class="btn btn-danger">İptal</a>
            <!-- /.card-body -->
        </div>
    </form>
}




