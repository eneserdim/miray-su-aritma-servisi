@using ALPAY_WEP_PROJECT.Models.Siniflar
@model List<ServiceArea>
@{
    ViewBag.Title = "hizmetbolgeleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- END MOBILE MENU AREA  -->
<!-- witr_breadcumb_area -->


<!-- BLOG AREA -->
<div class="blog_area single_service_page">
    <div class="banner-page pt-125 pb-125" style="background-image: url(../../Content/Themes/assets/photo/hizmetler.jpg)">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="banner-page-wrapper">
                        <div class="banner-page-text">
                            <h2>Hizmet Bölgelerimiz</h2>
                        </div>
                        <ul class="banner-page-menu">
                            <li><a href="https://suaritmaservisistanbul.com">Anasayfa</a></li>
                            @foreach (var item in Model)
                            {
                                <li><span>@item.Tittle</span></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div> <br />
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-6 col-sm-12">
                <div class="row">
                    <div class="col-lg-12 ">
                        <div class="service-item all_color_service text-left ">
                            <div class="service_top_image">
                                @foreach (var item in Model)
                                {
                                    <div align="center">
                                        <img src="../@Url.Content(item.Images)" alt="">
                                    </div>

                                }

                            </div>
                            <div class="text_box all_icon_color">
                                @foreach (var item in Model)
                                {
                                    <h3>@item.Tittle</h3>
                                }
                                @foreach (var item in Model)
                                {
                                    <p>@Html.Raw(@item.Description)</p>
                                }


                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-12 acadmics">
                <div class="departmentList all_list_color text">
                    <h3>Hizmetlerimiz</h3>
                    <ul>
                        <li><a href="/miraysu/iletisim"> SU ARITMA SERVİSİ <span class="fas fa-phone"></span></a></li>
                        <li><a href="/miraysu/iletisim"> SU ARITMA FİLTRE DEĞİŞİMİ <span class="fas fa-phone"></span></a></li>
                        <li><a href="/miraysu/iletisim"> SU ARITMA CİHAZI SATIŞI <span class="fas fa-phone"></span></a></li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>
    






